<test>
  String reason = "867 is not prime.";
  if (Code.isPrime(867)) {
    System.out.println("[FAIL] " + reason);
    System.exit(1);  // signal failure to test runner
  } else {
    System.out.println("[PASS] " + reason);
    System.exit(0);  // signal success to test runner
  }
</test>

